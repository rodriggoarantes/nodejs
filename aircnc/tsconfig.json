{
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@config/*": ["config/*"]
    },
    "outDir": "lib",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "resolveJsonModuletrue": true,
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "public", ".vscode"]
}
